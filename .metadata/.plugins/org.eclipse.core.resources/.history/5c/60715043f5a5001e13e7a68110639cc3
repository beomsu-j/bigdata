package if_else문;

import java.util.Scanner;

public class Ex2if_else문예제 {

	public static void main(String[] args) {

		// 1. 입력도구 꺼내오기
		Scanner sc = new Scanner(System.in);
		// 2. 에버랜드~~
		System.out.println("====에버랜드에 오신 걸 환영합니다!====");
		// 3. 나이 입력받기
		System.out.print("나이를 입력하세요 : ");
        int age = sc.nextInt();
        // 4. 인원수 입력받기
		System.out.print("인원수를 입력하세요 : ");
		int men = sc.nextInt();
        // 5. 20세 미만 입장료 50% 할인 아니면 그대로 계산 (기본 입장료 : 5000원)		
		if(age < 20 ) {
			System.out.println("총"+(men*2500)+"원 입니다");
		} else {
			System.out.println("총"+(men*5000)+"원 입니다");
		}
		
		
		// 5. 선생님 풀이
		int money = 0;
		if(age < 20) {
			money =(int) (5000 * men * 0.5);
		} else {
			 money = 5000 * men;
		}
		// 6. 결과 출력
		System.out.println("입장료는" + money + "원 입니다");
		
		
		
		
		
		
		
		
		
		
		
	}

}

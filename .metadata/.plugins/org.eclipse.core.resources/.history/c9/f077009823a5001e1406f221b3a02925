package 산술연산자;

import java.util.Scanner;

public class Ex02산술연산자예제 {

	public static void main(String[] args) {
        // 1. 입력도구 꺼내오기
		Scanner sc = new Scanner(System.in);
		// 2. 입력받기
//		String name = sc.next();
//		//int name = sc.nextint();
//		
//		System.out.println("입력받은 글자는 >> "+ name);

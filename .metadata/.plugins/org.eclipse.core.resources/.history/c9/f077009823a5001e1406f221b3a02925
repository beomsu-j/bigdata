//		// 3. 정수형 숫자를 입력
//		int num1 = sc.nextInt();
		
		//주석 단축키 : ctrl / 
		
		int num1 = 10;
		int num2 = 3;
		float num3 = 10.0f;
        float num4 = 3.0f;
		
        System.out.print("첫번째 정수입력 : ");
        sc.nextInt();
		System.out.println(num1+num2);
		System.out.println(num1-num2);
		System.out.println(num1*num2);
		System.out.println(num3/num4);
		System.out.println(num3%num4);
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
